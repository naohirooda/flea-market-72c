.signup-background#address
  = form_for @address do |f|
    .contents
      = render "devise/shared/error_messages", resource: @address
      .contents__title
        会員情報入力
      .contents__content
        .sub-title
          発送元・お届け先住所入力
      .contents__content
        .title
          .title__name
            お名前(全角)
          .title__required
            必須
        .fields
          .fields__last
            = f.text_field :last_name, class: "field__input", placeholder: "　例)山田"
          .fields__name
            = f.text_field :first_name, class: "field__input", placeholder: "　例)太郎"
      .contents__content
        .title
          .title__name
            お名前カナ(全角)
          .title__required
            必須
        .fields
          .fields__last
            = f.text_field :last_name_kana, class: "field__input", placeholder: "　例)ヤマダ"
          .fields__name
            = f.text_field :first_name_kana, class: "field__input", placeholder: "　例)タロウ"
      .contents__content
        .title
          .title__name
            郵便番号
          .title__required
            必須
        .field
          = f.text_field :postal_code, class: "field__input", placeholder: "　例)123-4567"
      .contents__content
        .title
          .title__name
            都道府県
          .title__required
            必須
        .field
          = f.select :prefectures, Address.prefectures.keys, {prompt: "選択してください"}, class: "field__input"
      .contents__content
        .title
          .title__name
            市区町村
          .title__required
            必須
        .field
          = f.text_field :municipalities, class: "field__input", placeholder: "　例)横浜市緑区"
      .contents__content
        .title
          .title__name
            番地
          .title__required
            必須
        .field
          = f.text_field :street_number, class: "field__input", placeholder: "　例)青山1-1-1"
      .contents__content
        .title
          .title__name
            建物名
          .title__optional
            任意
        .field
          = f.text_field :detail_building, class: "field__input", placeholder: "　例)山田ビル101"
      .contents__content
        .title
          .title__name
            電話番号
          .title__optional
            任意
        .field
          = f.text_field :telephone_number, class: "field__input", placeholder: "　例)09012345678"
      .submit-box
        = f.submit "登録する", class: "submit-box__btn"
