= render partial: "buyers/sub-header"
.login-background
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .contents
      .contents__signup
        .text
          アカウントをお持ちでない方はこちら
        .box
          = link_to new_user_registration_path, class: "box--email-decoration_none" do
            .box__email
              新規会員登録
          = link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: "box--google-decoration_none" do
            .box__google
              = icon("fab", "google")
              Googleでの登録
          = link_to user_facebook_omniauth_authorize_path, method: :post, class: "box--facebook-decoration_none" do
            .box__facebook
              = icon("fab", "facebook-square")
              Facebookでの登録
      .contents__line
      - if flash.any?
        - flash.each do |key, value|
          - if key == "alert"
            = content_tag :div, value, class: "contents__error"
      .contents__content
        .field
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "field__input", placeholder: "メールアドレス"
      .contents__content
        .field
          = f.password_field :password, autocomplete: "current-password", class: "field__input", placeholder: "パスワード"
      .contents__content
        .login-box
          = f.submit "ログイン", class: "login-box__btn"
      = link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: "contents--google-decoration_none" do
        .login-google
          = icon("fab", "google")
          Googleでログイン
      = link_to user_facebook_omniauth_authorize_path, method: :post, class: "contents--facebook-decoration_none" do
        .login-facebook
          = icon("fab", "facebook-square")
          Facebookでログイン
      = link_to "パスワードをお忘れの方", new_password_path(resource_name), class: "forget-password"
= render partial: "buyers/sub-footer"