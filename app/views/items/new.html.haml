.buy
  .header
    = render partial: "/buyers/sub-header"
  .sell-main
    .sell-main__content
      %form.form-content
        .sell-photo
          .item-photo
            %label 出品画像
            %span.required 必須 
            %p.item-photo--description
              最大10枚までアップロードできます
            %label.item-photo--label
              .label-content
                %input.label-content--file{type: 'file'}
                  = icon('fa','camera', class: "photo-icon")
                %p.label-content--text
                  ドラッグアンドドロップ
                  %br
                  またはクリックをしてファイルをアップロード
        .item-info
          %label 商品名
          %span.required 必須
          .item-info__form
            %input.input-form{type: 'text', name: 'name', placeholder: '40字まで'}
          .item-info--description
            %label 商品の説明
            %span.required 必須
            %textarea.item-info--description__textarea{name: 'description',rows: '7', placeholder: '商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。'}
            .item-info--description__footer
              %span 0/1000
        .item-detail
          %p.item-detail__title 商品の詳細
          .item-category
            %label カテゴリー
            %span.required 必須 
            .item-category__form
              %select.select-form{name: "categoryId"}
                %option.select-form--option{label:"選択してください"}
                %option.select-form--option{label:"レディース", value: "1"}
                %option.select-form--option{label:"メンズ", value: "2"}
                %option.select-form--option{label:"ベビー・キッズ", value: "3"}
                %option.select-form--option{label:"インテリア・住まい・小物", value: "4"}
                %option.select-form--option{label:"本・音楽・ゲーム", value: "5"}
                %option.select-form--option{label:"おもちゃ・ホビー・グッズ", value: "6"}
                %option.select-form--option{label:"コスメ・香水・美容", value: "7"}
                %option.select-form--option{label:"家電・スマホ・カメラ", value: "8"}
                %option.select-form--option{label:"スポーツ・レジャー", value: "9"}
                %option.select-form--option{label:"ハンドメイド", value: "10"}
                %option.select-form--option{label:"チケット", value: "11"}
                %option.select-form--option{label:"自転車・オートバイ", value: "12"}
                %option.select-form--option{label:"その他", value: "13"}
          .item-brand
            %label ブランド
            %span.voluntary 任意
            .item-brand__form
              %input.input-form{type: 'text', name: 'name', placeholder: '例)シャネル'}
          .item-status
            %label 商品の状態
            %span.required 必須 
            .item-status__form
              %select.select-form{name: "status"}
                %option.select-form--option{label:"選択してください"}
                %option.select-form--option{label:"新品、未使用品", value: "1"}
                %option.select-form--option{label:"未使用品に近い", value: "2"}
                %option.select-form--option{label:"目立った傷や汚れなし", value: "3"}
                %option.select-form--option{label:"やや傷や汚れあり", value: "4"}
                %option.select-form--option{label:"傷や汚れあり", value: "5"}
                %option.select-form--option{label:"全体的に状態が悪い", value: "6"}
        .delivery-info
          %p.delivery-info__title 
            配送について
            = link_to "#", class: "links__btn" do
              = icon('fa','question-circle')
          .delivery-burden
            %label 配送料の負担
            %span.required 必須 
            .delivery-burden__form
              %select.select-form{name: "delivery-burden"}
                %option.select-form--option{label:"選択してください"}
                %option.select-form--option{label:"送料込み(出品者負担)", value: "1"}
                %option.select-form--option{label:"着払い(購入者負担)", value: "1"}
          .shipping-region
            %label 発送元の地域
            %span.required 必須 
            .delivery-burden__form
              %select.select-form{name: "delivery-burden"}
                %option.select-form--option{label:"選択してください"}
                %option.select-form--option{label:"北海道", value: "1"}
                %option.select-form--option{label:"青森県", value: "2"}
                %option.select-form--option{label:"岩手県", value: "3"}
                %option.select-form--option{label:"宮城県", value: "4"}
